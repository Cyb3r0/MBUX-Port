<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_bar"
    android:paddingStart="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/gear_display"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@drawable/gear_unknown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gear_display"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/lim_display"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/lim_off" />

            <TextView
                android:id="@+id/lim_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mbfont"
                android:text="__"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cruise_display"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/cruise_off" />
            <TextView
                android:id="@+id/cruise_text"
                android:layout_width="wrap_content"
                android:text="__"
                android:paddingTop="6dp"
                android:fontFamily="@font/mbfont"
                android:paddingStart="10dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>